<configuration>

    <!--数据源配置-->
    <dataSource>
        <proprety name="driverClass" value="com.mysql.jdbc.Driver"></proprety>
        <!--/// 三个斜线表示的就是连接的是本地的数据库-->
        <proprety name="jdbcUrl" value="jdbc:mysql:///zdy_mybatis?characterEncoding=utf-8"></proprety>
        <proprety name="user" value="root"></proprety>
        <proprety name="password" value="root"></proprety>
    </dataSource>

    <!--mapper.xml,引入mapper文件的位置，方便框架端只读取sqlMapConfig.xml的信息，就可以接着找到mapper的信息-->
    <mapper resource="UserMapper.xml"></mapper>

</configuration>